<!--Strictly typed definirame deka ovojl view kje ni bide povrzan samo so eden model LoginView modelot-->
@model QrMenu.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@Html.ValidationSummary(false,"", new {@class = "text-danger d-flex justify-content-center font-weight-bold"})


<div class="modal-body">


    <div class="row">
     
   <div class="col-4"></div>

   <div class="col-4">
   <div class="card border-secondary mb-3" style="max-width: 50rem;">
  <div class="card-header">Register</div>
  <div class="card-body">
  <form method="post" asp-action="Register" asp-controller="Account">
    <div class="form-group">
      <label asp-for="UserName" class="form-label mt-4"></label>
      <input asp-for="UserName" type="text" class="form-control" placeholder="Enter username">
      <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
      <label  asp-for="Password" class="form-label mt-4"></label>
      <input  asp-for="Password" type="password" class="form-control" placeholder="Enter password">
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
     <div class="form-group">
      <label  asp-for="ConfirmPassword" class="form-label mt-4"></label>
      <input  asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-Enter password">
      <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <br/>
    
    <button type="submit" class="btn btn-primary btn-sm">Register</button>
  
</form>

  </div>
  </div>
  </div>
  <div class="col-4"></div>
  </div>
  



</div>

